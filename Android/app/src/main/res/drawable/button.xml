<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF444444"
                android:endColor="#FF666666"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#FF222222" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="0dp"
                android:top="3dp"
                android:right="0dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF444444"
                android:startColor="#FF666666"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#FF222222" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="0dp"
                android:top="3dp"
                android:right="0dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FF444444"
                android:startColor="#FF666666"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#FF222222" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="0dp"
                android:top="3dp"
                android:right="0dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>
